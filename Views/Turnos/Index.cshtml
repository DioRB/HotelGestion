@model IEnumerable<HotelGestion.Models.Turno>

@{
    ViewData["Title"] = "Listado Turnos";
}


<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h1>Turnos</h1>
        <p>
            <a asp-action="Create" class="btn btn-success mb3">Crear Nueva</a>
        </p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Tipo Turno
                    </th>
                    <th>
                        Hora de Inicio
                    </th>
                    <th>
                        Hora de Final
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoTurno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraFin)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdTurno" class="btn btn-primary">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdTurno" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>

<div class="rellenar"></div>
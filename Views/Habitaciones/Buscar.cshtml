@model HabitacionFiltroViewModel
@{
    ViewData["Title"] = "Buscar Habitaciones";
}

<h2>Buscar Habitaciones</h2>
<hr />

<div class="card mb-4">
    <div class="card-header">
        <h5>Filtros de Búsqueda</h5>
    </div>
    <div class="card-body">
        <form asp-action="Buscar" method="get">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Piso</label>
                        <select name="piso" class="form-control">
                            <option value="">-- Todos --</option>
                            @foreach (var p in Model.PisosDisponibles)
                            {
                                <option value="@p" selected="@(Model.Piso == p)">Piso @p</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label>Tipo</label>
                        <select name="tipo" class="form-control">
                            <option value="">-- Todos --</option>
                            @foreach (var t in Model.TiposDisponibles)
                            {
                                <option value="@t" selected="@(Model.Tipo == t)">@t</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label>Estado</label>
                        <select name="estado" class="form-control">
                            <option value="">-- Todas --</option>
                            @foreach (var e in Model.EstadosDisponibles)
                            {
                                <option value="@e" selected="@(Model.Estado == e)">@e</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                    <a asp-action="Buscar" class="btn btn-secondary">
                        <i class="fas fa-redo"></i> Limpiar Filtros
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.Resultados.Any())
{
    <div class="card">
        <div class="card-header">
            <h5>Resultados (@Model.Resultados.Count habitaciones encontradas)</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Número</th>
                        <th>Piso</th>
                        <th>Tipo</th>
                        <th>Capacidad</th>
                        <th>Precio</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var habitacion in Model.Resultados)
                    {
                        <tr>
                            <td>@habitacion.Numero</td>
                            <td>@habitacion.Piso</td>
                            <td>@habitacion.TipoHabitacion</td>
                            <td>@habitacion.Capacidad</td>
                            <td>$@habitacion.PrecioNoche.ToString("N2")</td>
                            <td>@habitacion.EstadoHabitacion</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@habitacion.IdHabitacion" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}


<div class="rellenar"></div>